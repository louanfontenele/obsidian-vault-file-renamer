{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ES2020", "DOM"],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": ".",
		"sourceMap": false,
		"ignoreDeprecations": "6.0",
		"noEmit": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
